  <ItemGroup>
    <ProjectReference Include="..\Luban.Core\Luban.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Templates\common\dart\" />
  </ItemGroup>

  <ItemGroup>
